{
  "name": "@slardar/electron",
  "version": "3.2.25",
  "description": "Slardar Electron SDK",
  "license": "ISC",
  "main": "cn/index.cjs.js",
  "module": "cn/index.esm.js",
  "types": "esm/index.d.ts",
  "files": ["cn", "esm", "india", "maliva"],
  "publishConfig": {
    "registry": "http://bnpm.byted.org/"
  },
  "repository": {
    "type": "git",
    "url": "git@code.byted.org:appmonitor/slardar_sdk.git"
  },
  "dependencies": {
    "@slardar/sdk-template": "1.1.10",
    "@slardar/sdk-web": "1.7.2",
    "node-localstorage": "^2.2.1"
  },
  "ava": {
    "extensions": ["ts", "tsx"],
    "require": ["../../tools/ava.setup"],
    "environmentVariables": {
      "TS_NODE_PROJECT": "../../tsconfigs/tsconfig.cjs.json"
    },
    "files": ["src/**/*.spec.{ts,tsx}"]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "extension": [".ts"],
    "include": ["**/*.ts"],
    "exclude": [
      "**/__tests__/**/*.*",
      "**/__test__/**/*.*",
      "**/vendors/**/*.*",
      "**/index.ts",
      "**/types/**/*.*",
      "**/exports.ts",
      "**/index.ts"
    ],
    "check-coverage": false
  },
  "scripts": {
    "test": "ava",
    "cover": "nyc --reporter=json ava && nyc report",
    "analyze": "library-analyze -p ./cn/*[^0-9].cn.js,./cn/plugins/*.js",
    "esm": "tsc -b ./tsconfig.json",
    "build": "batch-rollup -d ./rollup"
  },
  "devDependencies": {
    "@slardar/rollup": "0.0.3-alpha.0",
    "@types/node-localstorage": "^1.3.0"
  }
}
