{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "esnext",
    "noEmit": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es6", "es7", "dom", "dom.iterable"],
    "composite": true
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../intl-incontext-plugin"
    },
    {
      "path": "../intl-icu-plugin"
    }
  ]
}
