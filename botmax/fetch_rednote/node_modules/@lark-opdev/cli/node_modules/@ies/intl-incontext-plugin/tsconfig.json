{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    // 是否默认禁用 any
    "noImplicitAny": false,
    "outDir": "./dist/esm",
    "module": "es6",
    // 注意tsc编译
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "composite": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
