{
  "name": "@slardar/sdk-web",
  "version": "1.7.2",
  "description": "Slardar Web SDK",
  "main": "dist/index.cjs.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "files": ["dist", "esm"],
  "publishConfig": {
    "registry": "http://bnpm.byted.org/"
  },
  "dependencies": {
    "@slardar/sdk-template": "1.1.10"
  },
  "devDependencies": {
    "@slardar/rollup": "0.0.3-alpha.0"
  },
  "ava": {
    "extensions": ["ts", "tsx"],
    "require": ["../../tools/ava.setup"],
    "environmentVariables": {
      "TS_NODE_PROJECT": "../../tsconfigs/tsconfig.cjs.json"
    },
    "files": ["src/**/*.spec.{ts,tsx}"]
  },
  "browserslist": [
    "ie >= 9",
    "Edge >= 12",
    "Firefox >= 4",
    "Opera >= 12.1",
    "and_qq >= 10.4",
    "Safari >= 5",
    "iOS >= 3.2",
    "Chrome >= 4",
    "Android >= 37",
    "ChromeAndroid >= 89",
    "UCAndroid >= 12.12"
  ],
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "extension": [".ts"],
    "include": ["**/*.ts"],
    "exclude": [
      "**/__tests__/**/*.*",
      "**/__test__/**/*.*",
      "**/vendors/**/*.*",
      "src/transports/index.ts",
      "src/utils/index.ts",
      "src/utils/defaults.ts",
      "src/utils/dom.ts"
    ],
    "check-coverage": false
  },
  "scripts": {
    "test": "ava",
    "esm": "tsc -b ./tsconfig.json",
    "build": "batch-rollup -d ./rollup",
    "cover": "nyc --reporter=json ava && nyc report",
    "genTypeDesc": "npx esno ./script/generate-type-desc.ts",
    "dtsGen:thrift:collector": "dtsGen --int64 number -r ../../../api_thrift/browser/collector_v2 -o src/types/thrift/browser/collector_v2 *.thrift",
    "dtsGen:thrift:settings": "dtsGen --int64 number -r ../../../api_thrift/browser/sdk_settings_v2 -o src/types/thrift/browser/sdk_settings_v2 *.thrift"
  }
}
